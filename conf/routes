# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                     @controllers.Application.index()
GET         /orkla                @controllers.Application.orkla
GET         /blog                 @controllers.Application.blog
GET         /zone1                @controllers.Application.zone1
GET         /zone2                @controllers.Application.zone2
GET         /zone3                @controllers.Application.zone3
GET         /accommodation        @controllers.Application.accommodation
GET         /about                @controllers.Application.about
#GET         /test                 @controllers.Application.test
#GET         /data                 @controllers.Application.data

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         @controllers.Assets.at(path="/public", file)

# Handle locale
# POST        /locale               @controllers.Application.changeLocale
# GET         /i18n                 @controllers.Application.i18n(lang : Option[String])

